<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <display-name>SneakerStorageManagement</display-name>

    <!-- Servlet Definitions from origin/Duc -->
    <servlet>
        <servlet-name>productServlet</servlet-name>
        <servlet-class>controller.productServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseOrderServlet</servlet-name>
        <servlet-class>controller.purchaseOrder.PurchaseOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseOrderDetailServlet</servlet-name>
        <servlet-class>controller.purchaseOrder.PurchaseOrderDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StockServlet</servlet-name>
        <servlet-class>controller.stock.StockServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListUserServlet</servlet-name>
        <servlet-class>controller.user.ListUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>controller.user.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserServlet</servlet-name>
        <servlet-class>controller.user.EditUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>controller.user.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListSuppliersServlet</servlet-name>
        <servlet-class>controller.supplier.ListSuppliersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSupplierServlet</servlet-name>
        <servlet-class>controller.supplier.AddSupplierServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditSupplierServlet</servlet-name>
        <servlet-class>controller.supplier.EditSupplierServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteSupplierServlet</servlet-name>
        <servlet-class>controller.supplier.DeleteSupplierServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListBinsServlet</servlet-name>
        <servlet-class>controller.bins.ListBinsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBinServlet</servlet-name>
        <servlet-class>controller.bins.AddBinServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditBinServlet</servlet-name>
        <servlet-class>controller.bins.EditBinServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBinServlet</servlet-name>
        <servlet-class>controller.bins.DeleteBinServlet</servlet-class>
    </servlet>

    <!-- HEAD Exclusive Servlet Definitions -->
    <servlet>
        <servlet-name>CreateDeliveryOrderServlet</servlet-name>
        <servlet-class>controller.delivery.CreateDeliveryOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeliveryOrderServlet</servlet-name>
        <servlet-class>controller.delivery.DeliveryOrderServlet</servlet-class>
    </servlet>

    <!-- Shared Servlet Definitions -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>controller.DashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductListServlet</servlet-name>
        <servlet-class>controller.product.ProductListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetailsServlet</servlet-name>
        <servlet-class>controller.product.ProductDetailsServlet</servlet-class>
    </servlet>

    <!-- Servlet Mappings from origin/Duc -->
    <servlet-mapping>
        <servlet-name>ProductListServlet</servlet-name>
        <url-pattern>/productList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetailsServlet</servlet-name>
        <url-pattern>/productDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseOrderServlet</servlet-name>
        <url-pattern>/purchaseOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseOrderDetailServlet</servlet-name>
        <url-pattern>/purchaseOrderDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StockServlet</servlet-name>
        <url-pattern>/stock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListUserServlet</servlet-name>
        <url-pattern>/listusers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/adduser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserServlet</servlet-name>
        <url-pattern>/edituser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/deleteuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListSuppliersServlet</servlet-name>
        <url-pattern>/listsuppliers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSupplierServlet</servlet-name>
        <url-pattern>/addsupplier</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditSupplierServlet</servlet-name>
        <url-pattern>/editsupplier</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteSupplierServlet</servlet-name>
        <url-pattern>/deletesupplier</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListBinsServlet</servlet-name>
        <url-pattern>/listbins</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBinServlet</servlet-name>
        <url-pattern>/addbin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditBinServlet</servlet-name>
        <url-pattern>/editbin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBinServlet</servlet-name>
        <url-pattern>/deletebin</url-pattern>
    </servlet-mapping>

    <!-- HEAD Exclusive Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>CreateDeliveryOrderServlet</servlet-name>
        <url-pattern>/createDeliveryOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeliveryOrderServlet</servlet-name>
        <url-pattern>/deliveryOrders</url-pattern>
    </servlet-mapping>

    <!-- Shared Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Welcome File List (Shared) -->
    <welcome-file-list>
        <welcome-file>view/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>